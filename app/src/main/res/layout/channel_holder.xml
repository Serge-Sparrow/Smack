<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="6dp"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2">

        <ImageButton
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:id="@+id/delete_channel" android:scaleType="fitCenter"
                card_view:srcCompat="@android:drawable/ic_delete" android:background="@android:color/transparent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent" card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="14dp" android:layout_marginTop="14dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/channel_name"
                card_view:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/delete_channel" android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textAllCaps="false"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
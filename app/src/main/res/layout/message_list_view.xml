<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:srcCompat="@drawable/dark1"
            android:id="@+id/message_user_image"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_name" tools:text="serge"
            app:layout_constraintStart_toEndOf="@+id/message_user_image"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_date" tools:text="05/56/2017"
            app:layout_constraintStart_toEndOf="@+id/message_name"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/message_body" app:layout_constraintStart_toEndOf="@+id/message_user_image"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/message_date" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="grdgrgkhgnxcv gdflgerg gdfgrghre vfbhfjtjhret vdg,hdjt fgdhrh fdgrhrtjtj blfgnym"/>
    <Button
            android:text="remove"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:id="@+id/message_dlt_btn" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/message_user_image"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/message_body" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:textAppearance="@style/TextAppearance.AppCompat"
            style="@style/Widget.AppCompat.Button" android:fontFamily="@font/archivo_black" android:textSize="8dp"
            android:textAlignment="center" android:typeface="sans" android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>
</android.support.constraint.ConstraintLayout>
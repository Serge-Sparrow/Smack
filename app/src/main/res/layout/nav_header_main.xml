<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:gravity="bottom" android:id="@+id/linearLayout" tools:layout_editor_absoluteY="81dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/profiledefault"
            android:contentDescription="@string/nav_header_desc"
            android:id="@+id/user_image_nav_header"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/user_name_nav_header"
            tools:text="SergeSparrow"
            app:layout_constraintStart_toEndOf="@+id/user_image_nav_header" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/user_image_nav_header" android:text="SergeSparrow"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_email_nav_header"
            tools:text="serge@sparrow.com"
            app:layout_constraintTop_toBottomOf="@+id/user_name_nav_header"
            app:layout_constraintStart_toEndOf="@+id/user_image_nav_header"
            android:layout_marginStart="8dp" android:text="serge@sparrow.com"/>
    <Button
            android:text="@string/login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/login_btn_nav_header"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/user_image_nav_header"
            android:background="@android:color/transparent" android:onClick="onLoginButtonClicked"
            android:textAlignment="viewStart"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/addchannelbutton"
            android:id="@+id/add_channel_btn" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="onAddChannelButtonClicked" android:background="@android:color/transparent"
            android:scaleType="fitXY" android:padding="5dp"/>

</android.support.constraint.ConstraintLayout>
